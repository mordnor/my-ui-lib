{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    // assure la génération
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./dist/types",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "isolatedModules": false,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@theme/*": [
        "theme/*"
      ]
    }
  },
  "include": [
    "src",
    "theme"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "storybook-static",
    "**/*.stories.tsx",
    "**/*.test.tsx"
  ]
}
