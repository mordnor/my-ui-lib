{
  "extends": "./tsconfig.json",
  "compilerOptions": {
  
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./dist/types",

  
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",

  
    "isolatedModules": false,
    "skipLibCheck": true,
    "esModuleInterop": true,

  
    "noEmit": false
  },
  "include": ["src", "theme"],
  "exclude": [
    "node_modules",
    "dist",
    "dist-types",
    "storybook-static",
    "**/*.stories.tsx",
    "**/*.test.tsx"
  ]
}
